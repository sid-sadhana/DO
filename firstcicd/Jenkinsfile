pipeline {
    agent any  

    stages {
        stage('Clone Repository') {
            steps {
                git branch: 'main', url: 'https://github.com/sid-sadhana/DO.git'
            }
        }

        stage('Install Dependencies') {
            steps {
                dir('firstcicd/myapp') {
                    sh 'npm install'
                }
            }
        }

        stage('Build React App') {
            steps {
                dir('firstcicd/myapp') {
                    sh 'npm run build'
                }
            }
        }

        stage('Deploy to Nginx') {
            steps {
                sh '''
                sudo rm -rf /var/www/react-app
                sudo mv firstcicd/myapp/build /var/www/react-app
                '''
            }
        }

        stage('Restart Nginx') {
            steps {
                sh 'sudo systemctl restart nginx'
            }
        }
    }

    post {
        success {
            echo '✅ Deployment Successful!'
        }
        failure {
            echo '❌ Deployment Failed!'
        }
    }
}
